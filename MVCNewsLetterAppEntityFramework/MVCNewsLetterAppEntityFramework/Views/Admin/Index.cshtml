@using MVCNewsLetterAppEntityFramework.ViewModels
@model List<SignupVm>

<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">Sign-ups</h5>
        </div>
        <div class="card-body">
            @foreach (var signup in Model)
            {
                // Razor helper method Unsubscribe method in the Admin controller using the Post FormMethod
                using (Html.BeginForm("Unsubscribe", "Admin", FormMethod.Post))
                {
                    <input type="hidden" name="Id" value="@signup.Id" /> 
                    <div class="row mb-1">
                        <div class="col-2">
                            @signup.FirstName
                        </div>
                        <div class="col">
                            @signup.LastName
                        </div>
                        <div class="col-4">
                            @signup.EmailAddress
                        </div>
                        <div class="col">
                            <button type="submit" class="btn-sm btn-outline-danger btn-block">
                                Unsubscribe
                            </button>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>